        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const glow = document.querySelector('.glow');
            if (glow) {
                glow.style.transform = `translate(${scrolled * 0.1}px, ${scrolled * 0.05}px)`;
